      function estirarTirita() {                             // Efecto ‚Äúestirarse‚Äù breve
        track.classList.add('stretch');
        setTimeout(()=>track.classList.remove('stretch'), 230);
      }
      function alternar() {                                  // Cambia de modo d√≠a/noche
        oscuro = !oscuro;
        aplicarEstado();
        estirarTirita();
        playSwitch();                                        // <<< SONIDO AQU√ç
      }

      // Click sobre el riel (toda la tirita)
      track.addEventListener('click', (e) => {
        if (e.target === thumb) return; // Si el objetivo fue la bolita, no duplicar acci√≥n
        alternar();
      });
      // Click en la bolita
      thumb.addEventListener('click', (e) => { e.stopPropagation(); alternar(); });

      // Clics en contenido ya no ‚Äúencienden‚Äù en oscuro (requerimiento)
