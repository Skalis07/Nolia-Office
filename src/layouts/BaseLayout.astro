---
// "title" es obligatorio y lo define cada p√°gina.
const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="color-scheme" content="light only" />
    <link
      rel="preload"
      as="image"
      href={import.meta.env.BASE_URL + "img/fondo.png"}
      fetchpriority="high"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href={import.meta.env.BASE_URL + "icons/favicon.svg"}
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
